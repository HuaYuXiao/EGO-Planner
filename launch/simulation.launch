<launch>
    <!-- parameter for planner -->
    <arg name="model" default="p450_3Dlidar_D435i"/>
    <arg name="planner" default="EGO-Planner"/>

    <!-- world -->
    <include file="$(find prometheus_gazebo)/launch/GFKD.launch"/>

    <!-- 1号无人机 -->
    <include file="$(find prometheus_gazebo)/launch/sitl_$(arg model).launch"/>

    <include file="$(find ego_planner)/launch/uav_control_main_indoor.launch"/>

    <!-- 启动octomap建图 -->
    <include file="$(find ego_planner)/launch/mapping.launch"/>

    <!-- 启动导航 -->
    <include file="$(find ego_planner)/launch/$(arg planner).launch"/>

    <!-- 启动rviz -->
    <node type="rviz" name="rviz" pkg="rviz" args="-d $(find ego_planner)/config/$(arg planner).rviz"/>
</launch>
